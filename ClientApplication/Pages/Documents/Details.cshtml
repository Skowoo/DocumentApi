@page
@model ClientApplication.Pages.Documents.DetailsModel
@{
    ViewData["Title"] = "Szczegóły Dokumentu";
}
<h1>@Html.DisplayFor(x => x.Document.Title) - Szczegóły</h1>
<div asp-validation-summary="All" class="text-danger"></div>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Document.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(x => x.Document.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Document.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(x => x.Document.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Document.SignsSize)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(x => x.Document.SignsSize)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Document.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(x => x.Document.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Document.Deadline)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(x => x.Document.Deadline)
        </dd>
        @if(Model.Document.Translator is not null){
            <dt class="col-sm-2">
                @Html.DisplayNameFor(x => x.Document.Client!.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(x => x.Document.Client!.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(x => x.Document.Client!.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(x => x.Document.Client!.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(x => x.Document.Client!.TelephoneNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(x => x.Document.Client!.TelephoneNumber)
            </dd>
        }
        @if(Model.Document.Translator is not null){
            <dt class="col-sm-2">
                @Html.DisplayNameFor(x => x.Document.Translator!.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(x => x.Document.Translator!.Name)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-page="./Index">Powróć do listy</a> |
    <a asp-page="./Edit" asp-route-id="@Model.Document.Id">Edytuj</a> |
    <a asp-page="./Delete" asp-route-id="@Model.Document.Id">Usuń</a>
</div>